#include <iostream>
#include <sys/types.h>
#include <unistd.h>

using namespace std;

int static Soma = 1;

int main(void) 
{
    int num , FatorialParcial = 1;
    
    cout << "Enter the number: ";
    
    cin >> num;

    pid_t childpid;
    
    pid_t mypid;
    
    mypid = getpid();
    
    childpid = fork();
    
    if (childpid == -1) 
    {
        perror("Failed to fork");
        return 1;
    }
    
    if (childpid == 0)
    {
        for(int i = num ; i > num / 2 ; i--)
        {
            FatorialParcial = FatorialParcial * i;
        }
        
        Soma = Soma * FatorialParcial;
    }
    
    else
    {
        for(int i = num / 2 ; i > 0 ; i--)
        {
            FatorialParcial = FatorialParcial * i;
        }
        
        Soma = Soma * FatorialParcial;
    }
    
    cout << "\nSoma: " << Soma << endl;
    
    return 0;
}


